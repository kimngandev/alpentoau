{
  "name": "backend",
  "version": "0.0.1",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset --force",
    
    "db:seed": "tsx prisma/seed.ts",
    "db:seed-update": "tsx prisma/seed-update.ts",
    "db:backup": "node scripts/backup-db.js",
    "db:check": "node scripts/check-db.js",
    
    "docker:backup": "docker exec $(docker ps -qf 'name=postgres') pg_dump -U postgres -d webtruyen_db > backups/backup_$(date +%Y%m%d_%H%M%S).sql",
    "docker:logs": "docker logs $(docker ps -qf 'name=postgres')"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}